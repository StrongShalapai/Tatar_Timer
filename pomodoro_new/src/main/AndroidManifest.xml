<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inm.project.pomodoro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniversityProject">
        <activity android:name=".Goals_edit"></activity>
        <activity
            android:name=".CalendarSecond"
            android:label="Календарь"
            android:parentActivityName=".Calendar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Calendar"
            android:label="Календарь"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Goals"
            android:label="Цели"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:label="Настройки"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pomodoro"
            android:label="Pomodoro"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Second"
            android:label="Тестовая часть"
            android:parentActivityName=".Pomodoro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="Фокусируйся!"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>